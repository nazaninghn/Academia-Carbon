# Academia Carbon - Environment Variables Template
# Copy this file to .env for local development
# For production, set these in your hosting platform (Render.com, Heroku, etc.)

# CRITICAL SECURITY SETTINGS
# =========================

# Generate a secure secret key (50+ characters)
# Use: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-very-long-random-secret-key-here-minimum-50-characters

# NEVER set DEBUG=True in production!
DEBUG=False

# Production domains only (comma-separated)
ALLOWED_HOSTS=academia-carbon.onrender.com,yourdomain.com

# Database Configuration
# =====================

# PostgreSQL for production (provided by hosting platform)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration (Optional)
# =============================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default sender email
DEFAULT_FROM_EMAIL=noreply@academiacarbon.com

# Admin notification emails (comma-separated)
ADMIN_NOTIFICATION_EMAILS=admin@academiacarbon.com,security@academiacarbon.com

# Security Configuration (Optional)
# ================================

# Additional trusted CSRF origins (comma-separated)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Google reCAPTCHA v3 Keys
# Get your keys from: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here
RECAPTCHA_ENABLED=True

# Site configuration
SITE_URL=https://academia-carbon.onrender.com

# Development Only Settings
# =========================
# Only use these for local development!

# For local development only
# DEBUG=True
# ALLOWED_HOSTS=127.0.0.1,localhost
# DATABASE_URL=sqlite:///db.sqlite3
